{
  "name": "ovm-withdrawer",
  "version": "0.0.1",
  "description": "Prove and relay OVM1 withdrawals with modern TypeScript interface",
  "main": "dist/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run build && node dist/server.js",
    "start": "npm run build && node dist/server.js",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc -p tsconfig.server.json",
    "build:frontend": "tsc -p tsconfig.frontend.json",
    "watch": "npm run build && concurrently \"npm run watch:backend\" \"npm run watch:frontend\"",
    "watch:backend": "tsc -p tsconfig.server.json --watch",
    "watch:frontend": "tsc -p tsconfig.frontend.json --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@eth-optimism/contracts-ts": "^0.15.0",
    "@eth-optimism/sdk": "^3.1.0",
    "commander": "^11.0.0",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "optimism",
    "ethereum",
    "withdrawal",
    "cli",
    "typescript",
    "web3"
  ]
}
